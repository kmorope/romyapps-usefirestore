{
  "name": "@romyapps/usefirestore",
  "version": "1.0.1",
  "description": "Headless Firestore hooks powered by TanStack Query (React 18/19). Fully configurable.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.17"
  },
  "author": "Camilo Romero",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kmorope/romyapps-usefirestore.git"
  },
  "keywords": [
    "firebase",
    "firestore",
    "react-query",
    "tanstack",
    "hooks",
    "react"
  ],
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "firebase": ">=10.0.0",
    "react": ">=18"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vue": "^3.5.24"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm run typecheck",
    "docs:setup": "bun run scripts/setup-docs.ts",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  }
}
